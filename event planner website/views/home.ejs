<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Planner</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- views/partials/navbar.ejs -->
<nav id="navbar">
    <div class="navbar-container">
        <a href="/" class="navbar-logo">Event Planner</a>
        <ul class="navbar-menu">
            <li><a href="/">Home</a></li>
            <li><a href="/featured">Featured Events</a></li>
            <li><a href="/upcoming">Upcoming Events</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </div>
</nav>

    <!-- Hero Banner -->
    <header id="hero-banner" class="hero-banner">
        <div class="hero-content">
            <h1>Plan Your Perfect Event</h1>
            <p>Discover, plan, and book your next event with ease.</p>
            <a href="#featured-events" class="btn-primary">Explore Events</a>
        </div>
    </header>

    <!-- Featured Events -->
    <section id="featured-events" class="featured-events">
        <h2>Featured Events</h2>
        <div class="events-grid">
            <div class="event-card">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a7/D%C3%BClmen%2C_D%C3%BClmener_Sommer%2C_Open-Air-Konzert%2C_%22Bounce%22_--_2018_--_0051.jpg/1200px-D%C3%BClmen%2C_D%C3%BClmener_Sommer%2C_Open-Air-Konzert%2C_%22Bounce%22_--_2018_--_0051.jpg" alt="Concert">
                <h3 class="event-title">Concert</h3>
                <p class="event-date">2024-08-10</p>
                <p class="event-location">City Hall</p>
                <a href="/featured" class="btn-secondary">Learn More</a>
            </div>
            <div class="event-card">
                <img src="https://d197irk3q85upd.cloudfront.net/catalog/product/cache/95dbdf78ad5a0d4b547132f80fbac8f3/e/x/exhibition_banner_1.jpg" alt="Art Exhibition">
                <h3 class="event-title">Art Exhibition</h3>
                <p class="event-date">2024-09-05</p>
                <p class="event-location">Art Gallery</p>
                <a href="/featured" class="btn-secondary">Learn More</a>
            </div>
            <div class="event-card">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQsbP1SjH7EkE1TXIwAcnjd0wZOTem0iIlysA&s" alt="Tech Conference">
                <h3 class="event-title">Tech Conference</h3>
                <p class="event-date">2024-10-20</p>
                <p class="event-location">Convention Center</p>
                <a href="/featured" class="btn-secondary">Learn More</a>
            </div>
        </div>
    </section>

    <!-- Upcoming Events -->
    <section id="upcoming-events" class="upcoming-events">
        <h2>Upcoming Events</h2>
        <ul class="events-list">
            <li class="event-item">
                <strong class="event-name">Music Festival</strong> - <span class="event-date">2024-08-25</span>
                <p class="event-location">Park</p>
            </li>
            <li class="event-item">
                <strong class="event-name">Food Fair</strong> - <span class="event-date">2024-09-15</span>
                <p class="event-location">Downtown Plaza</p>
            </li>
        </ul>
    </section>

    <!-- Contact Form -->
    <section id="contact-form" class="contact-form">
        <h2>Contact Us</h2>
        <form action="/contact" method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <label for="message">Message:</label>
            <textarea id="message" name="message" rows="4" required></textarea>

            <button type="submit" class="btn-primary">Send Message</button>
        </form>
    </section>

</body>
</html>
